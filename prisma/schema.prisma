generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "postgresql"
    url      = env("DATABASE_URL")
}

model File {
  id String @id @default(cuid())

  bucket String
  fileName String
  fileType String
  originalName String
  size Float
  url String?

  createdAt DateTime @default(now())
}

model Sequence {
  id String @id @default(cuid())
  
  active Boolean
  locations String[]
  category String
  aspects String[]
  slides Slide[]
  
  createdAt DateTime @default(now())
  lastUpdated DateTime @default(now())
}

model Slide {
  id String @id @default(cuid())

  duration Float
  backgroundMediaId String
  // content at the bottom
  highlight Boolean
  title String
  description String

  sequence Sequence @relation(fields: [sequenceId], references: [id])
  sequenceId String
}